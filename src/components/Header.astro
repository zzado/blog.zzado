      <a href={`${BASE_URL}${langPrefix}/`} class="flex items-center gap-2 group">
        <div class="relative w-8 h-8 overflow-hidden rounded-full ring-2 ring-gray-100 dark:ring-gray-700 transition-transform group-hover:scale-110">
            <img src={`${BASE_URL}/fire.png`} alt="Logo" class="w-full h-full object-cover" />
        </div>
        <span class="text-xl font-bold tracking-tight font-mono" style="color: var(--text-main)">
            {SITE_TITLE}
        </span>
