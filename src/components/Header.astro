---
import Search from './Search.astro';
import { SITE_TITLE } from '../consts';

const BASE_URL = import.meta.env.BASE_URL;
const currentPath = Astro.url.pathname;
const isEnglish = currentPath.startsWith('/en') || currentPath.includes('/en/');
const langPrefix = isEnglish ? '/en' : '';

// Helper to construct URLs safely
const getUrl = (path: string) => {
    const base = BASE_URL === '/' ? '' : BASE_URL;
    return `${base}${path}`;
}
---

<header class="sticky top-0 z-50 w-full border-b backdrop-blur-md transition-colors duration-300" style="background-color: var(--bg-header); border-color: var(--border-main)">
  <div class="mx-auto flex h-16 max-w-7xl items-center justify-between px-4 sm:px-6 lg:px-8">
    <div class="flex items-center gap-3">
      <a href={getUrl(`${langPrefix}/`)} class="flex items-center gap-2 group">
        <div class="relative w-8 h-8 overflow-hidden rounded-full ring-2 ring-gray-100 dark:ring-gray-700 transition-transform group-hover:scale-110">
            <img src={getUrl('/fire.png')} alt="Logo" class="w-full h-full object-cover" />
        </div>
        <span class="text-xl font-bold tracking-tight font-mono" style="color: var(--text-main)">
            {SITE_TITLE}
        </span>
      </a>
    </div>
    
    <!-- Mobile Hamburger Menu Button -->
    <div class="flex items-center md:hidden gap-4">
        <!-- Mobile Search (Always Visible) -->
        <button id="mobile-search-btn-top" class="p-2 hover:opacity-80" aria-label="Search" style="color: var(--text-main)">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
        </button>

        <button id="menu-btn" class="p-2 rounded-md hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors" aria-label="Menu">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="color: var(--text-main)">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
        </button>
    </div>

    <!-- Desktop Navigation -->
    <nav class="hidden md:flex items-center gap-6">
       <a href={getUrl(`${langPrefix}/tech`)} class="text-sm font-medium hover:opacity-80 transition-opacity" style="color: var(--text-main)">
          {isEnglish ? 'Tech' : 'Í∏∞Ïà†'}
       </a>
       <a href={getUrl(`${langPrefix}/life`)} class="text-sm font-medium hover:opacity-80 transition-opacity" style="color: var(--text-main)">
          {isEnglish ? 'Life' : 'ÏùºÏÉÅ'}
       </a>
       <a href={getUrl(`${langPrefix}/about`)} class="text-sm font-medium text-gray-700 hover:text-gray-900 dark:text-gray-300 dark:hover:text-white" style="color: var(--text-main)">About</a>

       <div class="h-4 w-px bg-gray-300 mx-2" style="background-color: var(--border-main)"></div>
       
       <!-- Theme & Lang Pickers (Desktop) -->
       <div class="flex items-center gap-4">
           <!-- Theme Toggle (Sun/Moon) -->
           <button id="theme-btn" class="p-2 rounded-md hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors" aria-label="Toggle Theme" style="color: var(--text-main)">
               <!-- Sun Icon (Show in Dark Mode) -->
               <svg id="icon-sun" xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 hidden dark:block" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                   <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
               </svg>
               <!-- Moon Icon (Show in Light Mode) -->
               <svg id="icon-moon" xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 block dark:hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                   <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
               </svg>
           </button>

           <!-- Language Toggle Button (Simple) -->
           <button id="lang-btn" class="flex items-center gap-1 text-sm font-bold opacity-80 hover:opacity-100 transition-opacity focus:outline-none px-2 py-1 rounded hover:bg-gray-100 dark:hover:bg-gray-800" style="color: var(--text-main)">
               {isEnglish ? 'üá∫üá∏ EN' : 'üá∞üá∑ KO'}
           </button>
           
           <!-- Search Trigger -->
           <button id="search-btn" class="opacity-70 hover:opacity-100 focus:outline-none" aria-label="Search" style="color: var(--text-main)">
               <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                </svg>
           </button>

           <!-- Github Link -->
           <a href="https://github.com/zzado" target="_blank" rel="noreferrer" class="text-gray-500 hover:text-gray-900 dark:text-gray-400 dark:hover:text-gray-50">
              <span class="sr-only">GitHub</span>
