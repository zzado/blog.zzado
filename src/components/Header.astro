              </svg>
           </a>
       </div>
    </nav>
  </div>

  <!-- Mobile Dropdown Menu -->
  <div id="mobile-menu" class="hidden md:hidden border-t" style="border-color: var(--border-main); background-color: var(--bg-card)">
      <div class="px-4 py-4 space-y-4">
          <div class="flex flex-col gap-3">
               <a href={getUrl(`${langPrefix}/tech`)} class="block text-base font-medium py-2 hover:opacity-80" style="color: var(--text-main)">
                  {isEnglish ? 'Tech' : 'Í∏∞Ïà†'}
               </a>
               <a href={getUrl(`${langPrefix}/life`)} class="block text-base font-medium py-2 hover:opacity-80" style="color: var(--text-main)">
                  {isEnglish ? 'Life' : 'ÏùºÏÉÅ'}
               </a>
               <a href={getUrl(`${langPrefix}/about`)} class="block text-base font-medium py-2 hover:opacity-80" style="color: var(--text-main)">About</a>
          </div>
          
          <div class="h-px w-full my-2 bg-gray-200 dark:bg-gray-700"></div>

          <div class="flex items-center justify-between">
              <span class="text-sm font-medium" style="color: var(--text-muted)">Settings</span>
              <div class="flex gap-4">
                  <!-- Mobile Theme Toggle (Simple Cycle) -->
                  <button id="mobile-theme-btn" class="p-2 rounded-md hover:bg-gray-100 dark:hover:bg-gray-800" aria-label="Toggle Theme">
                      <div class="w-5 h-5 rounded-full border border-gray-300 shadow-sm" style="background-color: var(--bg-main)"></div>
                  </button>
                  
                  <!-- Mobile Lang Toggle -->
                  <button id="mobile-lang-btn" class="text-sm font-bold p-2 hover:opacity-80" style="color: var(--text-main)">
                      {isEnglish ? 'üá∫üá∏ EN' : 'üá∞üá∑ KO'}
                  </button>
              </div>
          </div>
      </div>
  </div>
</header>

<!-- Initial Theme Script (Critical Path) -->
<script is:inline define:vars={{ BASE_URL }}>
    function applyTheme(theme) {
        if (!theme) {
            if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
                theme = localStorage.getItem('theme');
            } else if (window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches) {
                theme = 'dark';
            } else {
                theme = 'paper';
            }
        }
        
        document.documentElement.setAttribute('data-theme', theme);
        if (theme === 'dark') {
            document.documentElement.classList.add('dark');
        } else {
            document.documentElement.classList.remove('dark');
        }
        localStorage.setItem('theme', theme);
    }
    applyTheme();
</script>

<script define:vars={{ BASE_URL }}>
    function setupHeader() {
        // Elements
        const searchBtn = document.getElementById('search-btn');
        const mobileSearchBtn = document.getElementById('mobile-search-btn-top');
        const menuBtn = document.getElementById('menu-btn');
        const mobileMenu = document.getElementById('mobile-menu');
        const themeBtn = document.getElementById('theme-btn');
        const mobileThemeBtn = document.getElementById('mobile-theme-btn');
        const langBtn = document.getElementById('lang-btn');
        const mobileLangBtn = document.getElementById('mobile-lang-btn');
        
        // --- Helper: Apply Theme ---
        const applyTheme = (theme) => {
            document.documentElement.setAttribute('data-theme', theme);
            if (theme === 'dark') {
                document.documentElement.classList.add('dark');
            } else {
                document.documentElement.classList.remove('dark');
            }
            localStorage.setItem('theme', theme);
        };

        // --- Helper: Toggle Theme ---
        const toggleTheme = () => {
            const currentTheme = document.documentElement.getAttribute('data-theme') || 'paper';
            const newTheme = currentTheme === 'dark' ? 'paper' : 'dark';
            applyTheme(newTheme);
        };

        // --- Helper: Path Cleaning ---
        const getCleanPath = (path) => {
            if (BASE_URL && BASE_URL !== '/' && path.startsWith(BASE_URL)) {
                return path.substring(BASE_URL.length) || '/';
            }
            return path;
        };

        // --- Helper: Language Toggle Logic ---
        const toggleLanguage = () => {
            const currentPath = window.location.pathname;
            const cleanPath = getCleanPath(currentPath);
            const isEnglish = cleanPath === '/en' || cleanPath.startsWith('/en/');
            
            let newPath = cleanPath;
            if (isEnglish) {
                if (cleanPath === '/en') {
                    newPath = '/';
                } else {
                    newPath = cleanPath.replace(/^\/en\//, '/');
                }
            } else {
                newPath = `/en${cleanPath === '/' ? '' : cleanPath}`;
            }
            
            const baseUrl = BASE_URL === '/' ? '' : BASE_URL;
            window.location.href = baseUrl + newPath;
        };

        // --- Event Listeners ---

        // Search
        const openSearch = () => window.dispatchEvent(new CustomEvent('open-search'));
        searchBtn?.addEventListener('click', openSearch);
        mobileSearchBtn?.addEventListener('click', openSearch);

        // Mobile Menu Toggle
        menuBtn?.addEventListener('click', (e) => {
            e.stopPropagation();
            mobileMenu?.classList.toggle('hidden');
        });

        // Close Mobile Menu on Outside Click
        document.addEventListener('click', (e) => {
            if (!mobileMenu?.classList.contains('hidden') && 
                !mobileMenu?.contains(e.target) && 
                !menuBtn?.contains(e.target)) {
                mobileMenu?.classList.add('hidden');
            }
        });

        // Theme Toggle (Single Button)
        themeBtn?.addEventListener('click', toggleTheme);
        mobileThemeBtn?.addEventListener('click', toggleTheme);

        // Lang Toggle (Desktop & Mobile)
        langBtn?.addEventListener('click', toggleLanguage);
        mobileLangBtn?.addEventListener('click', toggleLanguage);
    }

    // Run on initial load
    setupHeader();

    // Run on view transitions
    document.addEventListener('astro:page-load', setupHeader);
</script>
