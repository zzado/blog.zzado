---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PostView from '../../components/PostView.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('life')).filter(p => p.slug.startsWith('ko/')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<BaseLayout title="일상 (Life)">
    	<div class="mb-8">
		<h1 class="text-3xl font-bold" style="color: var(--text-main)">Life</h1>
		<p class="mt-2" style="color: var(--text-muted)">
			일상의 작은 순간들과 생각들
		</p>
	</div>
	<PostView posts={posts} />
</BaseLayout>
